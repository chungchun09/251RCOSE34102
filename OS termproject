#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <conio.h>

#define MAX_PROCESS 100

typedef structure{
    int PID
    int Arrivla_Time
    int CPU_Burst_Time
    int IO_Request_Time
    int IO_Burst_Time
    int Priority
}Process;

void CREATE_PROCESS(Process *p, int PID){
    P-> PID = PID;
    P-> Arrivla_Time = rand() % 11; //도착 시간을 0 ~ 10 사이로 설정
    P-> CPU_Burst_Time = rand() % 20 + 1; // CPU burst time을 1 ~ 20 사이로 설정
    P-> Priority = rand();
    // P-> IO_Burst_Time = 
    // P-> IO_Request_Time = 
}

