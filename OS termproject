int main(){
    Process process_list[MAX_PROCESS];
    int num_processes = 0;

    while(true){
        if(kbhit()){ // 키보드 입력이 있는 지 확인
            char ch = getch();

            if(ch == 27){ // esc가 ascii코드로 27 | esc를 누르면 탈출
                break;
            }
            else if(chat == " "){ // 스페이스바를 입력할 경우 프로세스 생성
                if(num_processes < MAX_PROCESS){
                    CREATE_PROCESS(&process_list[num_processes], num_processes + 1);
                    num_processes ++;
                }else{
                    break;
                }
            }
        }
    }

    return 0;
}


